<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:AppliedActivity1.Models"
             xmlns:viewmodels="clr-namespace:AppliedActivity1.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AppliedActivity1.Views.MainPage">

    <ContentPage.BindingContext>
        <viewmodels:GOTListViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
                EventName="Appearing"
                Command="{Binding PageAppearingCommand}" />
    </ContentPage.Behaviors>
    
    <CollectionView ItemsSource="{Binding GOTs}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:GOT">
                <HorizontalStackLayout Padding="10">
                    <VerticalStackLayout VerticalOptions="Center">
                        <Label Text="{Binding sentence}" FontSize="24" TextColor="Gray"/>
                        <Label Text="{Binding name}" FontSize="20" TextColor="Gray"/>
                        <Label Text="{Binding slug}" FontSize="16" TextColor="Gray"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>